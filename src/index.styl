mainColor = rgb(68, 129, 116)
darkMainColor = rgb(42, 88, 78)
halfDarkMainColor = rgb(56, 113, 101)
lightMainColor = rgb(141, 194, 183)

body
  margin: 0
  font-family: sans-serif

h3
  font-weight: 300

.hidden
  display: none

.main-container
  display: grid

  .content-container
    height: 400px

    &.drag-started
      border: 5px dotted grey
      border-radius: 20px

    &.drag-over
      border: 5px dashed grey

  .navigation
    background-color: mainColor
    color: white

    .logo
      font-size: 20pt
      padding-left: 10px
      padding-top: 10px

    .links
      width: 100%

      ul
        list-style-type: none
        padding-left: 0
        display: grid
        grid-auto-flow: column
        width: 100%
        margin: 0
        cursor: pointer
        margin-top: 10px

      li
        justify-self: center
        padding: 10px
        width: 100%
        box-sizing: border-box
        text-align: center

        &:hover
          background-color: darkMainColor

        &:active
          background-color: halfDarkMainColor

  .settings-box
    width: 300px
    background-color: lightMainColor
    padding: 20px
    justify-self: right
    position: fixed
    right: 20px
    bottom: 20px

    .settings-select
      border: 0
      background-color: white
      width: 50%
      border-radius: 0
      -webkit-appearance: none
      -moz-appearance: none
      padding: 10px
      position: relative
      cursor: pointer
      font-size: 12px !important

      &:hover
        background-color: mainColor
        color: white

    .settings-header
      background-color: white
      padding: 20px
      margin-top: 20px
      border: 0

      .settings-header-logo
        h3
          margin-top: 0
          margin-bottom: 5px

        .settings-header-logo-actions
          font-size: 12px
          display: flex
          flex-direction: row
          justify-content: space-around
          border: 1px solid grey
          padding: 10px

      .settings-header-links
        h3
          margin-bottom: 5px

        .settings-header-links-actions
          border: 1px solid grey

          ul
            list-style-type: none
            padding-left: 0
            margin: 0

            li
              font-size: 12px
              padding: 10px
              position: relative
              cursor: pointer

              &:hover
                background-color: mainColor
                color: white

              &:after
                content: 'x'
                position: absolute
                right: 10px
                width: 20px
                height: 20px
                text-align: center

          form
            margin: 10px auto
            display: flex
            flex-direction: row
            justify-content: space-around

    .settings-layout
      background-color: white
      padding: 20px
      margin-top: 20px
      border: 0

      h3
        margin-top: 0
        margin-bottom: 5px

      .settings-layout-actions
          font-size: 12px
          display: flex
          flex-direction: row
          justify-content: space-around
          padding: 10px

          .left-block
          .right-block
            display: flex
            justify-content: space-between
            height: 110px
            background-color: lightgrey
            box-sizing: border-box
            width: 45%
            transition: all 0.5s
            cursor: pointer

            &:hover
              box-shadow: 0 0 30px 0 lightgrey
              transform: scale(1.01)

          .left-block
            border: 3px solid grey

          .right-block
            display: flex
            justify-content: space-between

            div
              width: 49%
              border: 3px solid grey
              box-sizing: border-box
              display: inline-block

.empty-blocks-container
  display: flex
  justify-content: space-around
  height: 400px
  margin-top: 5px
  word-break: break-all

  .empty-block
    width: 100%
    border: 2px solid #d3d3d3
    display: flex
    justify-content: center
    align-items: center
    position: relative
    height: 100%
    flex-direction: column

    &:not(:last-child)
      margin-right: 5px

    .dropzone
      display: flex
      border: 5px dashed lightgrey
      height: 150px
      width: 300px
      margin: auto
      color: grey
      justify-content: center
      align-items: center

    .empty-block-inner
      width: 100%
      margin: auto
      display: flex
      justify-content: center
      align-items: center
      height: 100%
      position: relative

      .image-container
        display: flex
        justify-content: center
        align-items: center
        height: 100%

        .uploaded-image
          width: auto
          height: auto
          max-width: 100%
          max-height: 100%

      .delete-button
        color: lightgrey
        position: absolute
        right: 10px
        top: 10px

      button
        border: 2px solid lightgrey
        background-color: white
        cursor: pointer

        &:not(:last-child)
          margin-right: 5px

        &:hover
          background-color: lightgrey

        &:active
          background-color: rgb(148, 148, 148)
          border: 2px solid rgb(148, 148, 148)

    .next-blocks
      width: 100%
      display: flex
      justify-content: center
      align-items: center
      height: 100%
      position: relative
